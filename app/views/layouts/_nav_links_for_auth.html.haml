- if current_page?(browse_path)
  %li.nav-item= link_to 'Map', root_path, class: 'nav-link'
- unless current_page?(browse_path)
  %li.nav-item= link_to 'Browse', browse_path, class: 'nav-link'

- if user_signed_in?
  %li.nav-item
    - if current_user.visible?
      = link_to 'Profile', user_path(current_user), class: 'nav-link'
    - else
      = link_to 'Profile', edit_user_registration_path, class: 'nav-link'
  %li.nav-item
    = link_to 'Sign Out', destroy_user_session_path,
              method: 'delete', remote: true, class: 'nav-link'
- else
  %li.nav-item= link_to 'Sign In', new_user_session_path, class: 'nav-link'
  %li.nav-item= link_to 'Sign Up', new_user_registration_path, class: 'nav-link'

- if current_user.try(:admin?)
  %li.nav-item
    = link_to 'Admin', admin_root_path, class: 'nav-link',
      data: { turbolinks: 'false' }
