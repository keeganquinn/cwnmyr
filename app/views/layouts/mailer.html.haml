!!!
%html
  %head
    %meta{ content: 'text/html; charset=utf-8', 'http-equiv': 'Content-Type' }/
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }/
    = stylesheet_pack_tag 'main'

  -# haml-lint:disable InlineStyles
  %body{ style: '{margin: 0; padding: 0; min-width: 100% !important;}' }
    .m-4.border.border-dark.mt-3.p-0
      .w-100.navbar-dark.bg-dark.p-3.text-white
        = default_title

      .p-3
        = yield

        %hr.mt-4.w-75

        .pl-5.pt-1.pb-2
          %p Have a nice day!
          &mdash;
          = link_to default_title, root_url, target: :_blank

      .p-1.w-100.bg-light
        .text-muted
          = render 'layouts/foot'
