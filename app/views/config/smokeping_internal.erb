*** Presentation ***

template = /etc/smokeping/basepage.html

+ overview

width = 600
height = 50
range = 10h

+ detail

width = 600
height = 200
unison_tolerance = 2

"Last 3 Hours"    3h
"Last 30 Hours"   30h
"Last 10 Days"    10d
"Last 400 Days"   400d


*** Probes ***

+ FPing

binary = /usr/bin/fping


*** Targets ***

probe = FPing

menu = Adhocracy
title = Network Latency Graph
remark = Welcome to an internal Adhocracy-integrated SmokePing website.


<% Zone.all.each do |zone| -%>
+ <%= zone.code %>

menu = <%= zone.name %>
title = <%= zone.name %>

<% zone.nodes.each do |node| -%>
++ <%= node.code %>

menu = <%= node.name %>
title = <%= node.name %>

<% node.hosts.each do |host| -%>
<% if host.primary_interface -%>
+++ <%= host.name %>

menu = <%= host.name %>
title = <%= host.name %>
host = <%= host.primary_interface.ipv4_address %>

<% end -%>
<% end -%>
<% end -%>
<% end -%>
