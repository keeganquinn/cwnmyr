.container
  .row
    .col-md-12
      %h1
        = h @interface.code
        - unless @interface.name.blank?
          \-
          = h @interface.name

  .row
    .col-md-12
      - if policy(@interface).update?
        %p
          = link_to t(:edit), edit_interface_path(@interface),
                    class: 'btn btn-warning'
          = link_to t(:delete), url_for(@interface), method: :delete,
                    data: { confirm: t(:confirm_delete,
                            thing: Interface.model_name.human.downcase) },
                    class: 'btn btn-danger'

      %p.small
        = link_to t(:zone, zone: @interface.host.node.zone.name),
                           url_for(@interface.host.node.zone)
        %br/
        = link_to t(:node, node: @interface.host.node.name),
                           url_for(@interface.host.node)
        %br/
        = link_to t(:host, host: @interface.host.name), url_for(@interface.host)
        %br/
        %span{ class: @interface.status.color }
          = t :status, status: @interface.status.name

      = markdown @interface.body

      - unless @interface.address_mac.blank?
        %p
          BSSID/MAC address:
          = h @interface.address_mac

      - unless @interface.address_ipv6.blank?
        %p
          IPv6 address:
          = h @interface.address_ipv6

      - unless @interface.address_ipv4.blank?
        %p
          IPv4 address:
          = h @interface.address_ipv4

      %h2 Neighbors

      - if @interface.ipv4_neighbors.empty?
        %p No known neighbors.
      - else
        %ul
          - @interface.ipv4_neighbors.each do |neighbor|
            %li= link_to neighbor, url_for(neighbor)

      -# property stuff

      -# radio stuff

      -# geospatial stuff
