- content_for :meta_title, 'Change Password'

%h2 Change Password

= turbo_form resource, url: user_password_path, method: :put do |f|

  .row
    .col-md-6
      = f.input :password, label: 'New Password'
      - if @minimum_password_length
        .mb-3.text-muted (#{@minimum_password_length} characters minimum)
    .col-md-6
      = f.input :password_confirmation

  = f.hidden_field :reset_password_token
  = f.submit 'Change Password'

= render 'users/shared/links'
