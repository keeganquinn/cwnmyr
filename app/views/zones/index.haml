- @page_heading = t('zones')

%h2= t('manage zones')

%p.small= t('%d total') % Zone.count

= will_paginate @zones

%ul
  - @zones.each do |zone|
    %li{:id => "zone_#{zone.to_param}"}
      = link_to h(zone.to_param), zone_path(zone)
      \-
      = h zone.name
      %span.small
        = surround '(', ')' do
          = t('%d nodes') % zone.nodes.count

= will_paginate @zones

#new_zone
  %p= link_to_remote t('new zone'), :url => new_zone_path
