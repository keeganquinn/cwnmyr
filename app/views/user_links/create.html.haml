.container
  %h1= t :new_h, thing: UserLink.model_name.human

  = form_tag user_links_path do
    = render partial: 'form', locals: { user_link: @user_link }

    = hidden_field 'user_link', 'user_id'
    = submit_tag t(:create), id: 'user_link_create', class: 'btn btn-primary'
    = link_to t(:cancel), root_path, class: 'btn btn-warning'
